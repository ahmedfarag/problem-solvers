
<%= provide(:title, 'Add a category') %>
<h1>Add a category for <%= link_to @rel.categorizable.name, problem_path(@rel.categorizable) %></h1>


<%= form_for(@rel) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <%= f.hidden_field :categorizable_id %>
  <%= f.hidden_field :categorizable_type %>


  <%= f.label :category_id, "Category" %>
  <%= f.select :category_id, options_from_collection_for_select(@categories, "id", "name") %>
  
  <%= f.submit "Add Category", :class => "btn btn-large btn-primary green", id: "submitSol" %>
<% end %>
