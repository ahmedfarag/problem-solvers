<div class="row">
  <aside class="span4">
    <section>
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <div id="follow_form_<%=@user.id%>" class="follow_form" style="float:none"><%= render :partial => "follow_form", object: @user, as: :user  if signed_in? %></div>
    </section>
    <section>
      <%= render :partial => 'shared/stats', object: @user, as: :user %>
      <% unless @users.empty? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, :size => 30), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
  <div class="span8">
    <h3><%= yield(:title) %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate @users %>
    <% end %>
  </div>
</div>