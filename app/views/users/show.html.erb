<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
  <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <div id="follow_form_<%=@user.id%>" class="follow_form" style="float:none"><%= render :partial => "users/follow_form", object: @user, as: :user  if signed_in? %></div>

    </section>

    <section>
      <%= render :partial => 'shared/stats', object: @user, as: :user %>
    </section>

  </aside>
  <div class="span8">
 
    <% if @user.microposts.any? %>
      <h3>Activities (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>