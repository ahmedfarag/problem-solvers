<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>


  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>

  <p>Note: your profile picture will be the gravatar photo assigned with your email, <a target="new" href="http://gravatar.com/emails">change it?</a></p>
  <%= f.submit "Create my account", :class => "btn btn-large btn-primary" %>
<% end %>
