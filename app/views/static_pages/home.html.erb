<% provide(:title, 'Home') %>
<% if signed_in? %>
  <div class="row">
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render :partial => 'shared/stats', object: current_user, as: :user %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>News Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>  
<% else %>
  <div class="center hero-unit">
<div style="width:100%;height:128px;"> <%= image_tag(asset_path("problem-solver-active-128.png"), style:"display:block;
    margin:auto;") %>
</div>
    <h1>Welcome to problem-solvers</h1>

    <h2>
     This is a community where you can interact with problem solvers, and learn new problem solving techniques by checking others' solutions, explanations, and hints.
    </h2>
    <h2>Moreover, it provides a competitive environment, to see who has the best explanations, solutions, or even hints.
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  
<% end %> 